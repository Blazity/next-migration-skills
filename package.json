{
  "name": "nextjs-migration-kit",
  "version": "0.1.0",
  "description": "Agent-oriented skills and AST tools for migrating Next.js from Pages Router to App Router",
  "type": "module",
  "bin": {
    "ast-tool": "./dist/bin/ast-tool.js",
    "route-extractor": "./dist/bin/route-extractor.js",
    "component-inventory": "./dist/bin/component-inventory.js",
    "dependency-analyzer": "./dist/bin/dependency-analyzer.js",
    "migration-validator": "./dist/bin/migration-validator.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/bin/ast-tool.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "nextjs",
    "migration",
    "app-router",
    "pages-router",
    "ast",
    "codemod"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "handlebars": "^4.7.8",
    "ts-morph": "^27.0.2"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
